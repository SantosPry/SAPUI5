<mvc:View
        controllerName="master.logaligroup.empleados.controller.Details"
        xmlns="sap.m"
        xmlns:uxap="sap.uxap"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc">
        

        <uxap:ObjectPageLayout>
                <uxap:headerTitle>
                        <uxap:ObjectPageDynamicHeaderTitle>

                                <uxap:expandedHeading>

                                        <Title text="{northwind>LastName} {northwind>FirstName} ({northwind>EmployeeID})" wrapping="true"/>
                                
                                </uxap:expandedHeading>

                                <uxap:expandedContent>
                                        <HBox   alignItems="Center"
                                                justifyContent="SpaceBetween">

                                                <HBox>
                                                        <VBox>
                                                                <Label text="{i18n>country}:" class="boldElement"/>
                                                                <Text text="{northwind>Country}"/>
                                                        </VBox>
                                                </HBox>

                                                <HBox>

                                                        <VBox>
                                                                <Label text="{i18n>city}:" class="boldElement"/>
                                                                <Text text="{northwind>City}"/>
                                                        </VBox>
                                                
                                                </HBox>

                                                <HBox>

                                                        <VBox>
                                                                <Label text="{i18n>postalCode}:" class="boldElement"/>
                                                                <Text text="{northwind>PostalCode}"/>
                                                        
                                                        </VBox>
                                                
                                                </HBox>

                                        </HBox>
                                </uxap:expandedContent>

                                <uxap:actions>
                                        <Button
                                                text="{i18n>create}"
                                                tooltip="{i18n>create}"
                                                press="onCreateIncidencePress"
                                                type="Emphasized"
                                                width="6rem"/>
                                        <Button
                                                icon="sap-icon://decline"
                                                press="onClosePress"
                                                type="Reject"/>
                                </uxap:actions>
                        
                        </uxap:ObjectPageDynamicHeaderTitle>
                </uxap:headerTitle>

                <uxap:sections>
                
                        <uxap:ObjectPageSection title="{i18n>incidences}">
                                <uxap:subSections>
                                        <uxap:ObjectPageSubSection title="{i18n>incidences}">
                                                <uxap:blocks>
                                                        <Panel id="tableIncidence"/>
                                                </uxap:blocks>
                                        </uxap:ObjectPageSubSection>
                                </uxap:subSections>
                        </uxap:ObjectPageSection>
                        <uxap:ObjectPageSection title="{i18n>orders}">
                                <uxap:subSections>
                                        <uxap:ObjectPageSubSection>
                                                <uxap:blocks>
                                                        <core:Fragment
                                                                        fragmentName="master.logaligroup.empleados.fragment.Orders"
                                                                        type="XML"/>
                                                </uxap:blocks>
                                        </uxap:ObjectPageSubSection>
                                </uxap:subSections>
                        </uxap:ObjectPageSection>
                </uxap:sections>
        </uxap:ObjectPageLayout>

</mvc:View>