<mvc:View 
    controllerName="master.logaligroup.empleados.controller.Main"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:filterbar="sap.ui.comp.filterbar">

    <f:DynamicPage id="dynamicPage" >
        <f:title>
            <f:DynamicPageTitle >
                <f:heading>
                    <Title text="{i18n>appTitle}" 
                           wrapping="true"/>   
                </f:heading>


            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <filterbar:FilterBar
                            search="onFilterBarSearch"
                            showClearOnFB="true"
                            clear="onFilterBarClear">
                    <filterbar:filterGroupItems>
                        <filterbar:FilterGroupItem
                            groupName="filters"
                            name="employee"
                            label="{i18n>labelEmployee}"
                            visibleInFilterBar="true">
                            
                            <filterbar:control>
                               <Input id="filterEmployee"/> 
                            </filterbar:control>
                            
                        </filterbar:FilterGroupItem>
                        <filterbar:FilterGroupItem
                            groupName="filters"
                            name="country"
                            label="{i18n>labelCountry}"
                            visibleInFilterBar="true">
                            
                            <filterbar:control>
                               <ComboBox id="filterCountry"
                                        items="{countries>/Countries}"
                                        showSecondaryValues="true">
                                    <items>
                                        <core:ListItem key="{countries>code}"
                                                       text="{countries>country}"
                                                       additionalText="({countries>code})"/>
                                    </items>
                               </ComboBox> 
                            </filterbar:control>
                            
                        </filterbar:FilterGroupItem>                        

                    </filterbar:filterGroupItems>
                </filterbar:FilterBar>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="table"
                   items="{northwind>/Employees}"
                   growing="true"
                   growingScrollToLoad="true"  >
                <headerToolbar >
                    <Toolbar>
                        <Title text="{i18n>title}" 
                               wrapping="true"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column >
                       <Text text="{i18n>ID}"/>
                    </Column>
                    <Column >
                       <Text text="{i18n>fullname}"/>
                    </Column>
                    <Column >
                       <Text text="{i18n>country}"/>
                    </Column>
                    <Column >
                       <Text text="{i18n>city}"/>
                    </Column>
                    <Column >
                       <Text text="{i18n>postalCode}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation"
                                    press="onNavToDetails">
                        <cells>
                            <ObjectIdentifier title="{northwind>EmployeeID}"/>
                            <Text text="{northwind>LastName} {northwind>FirstName}"/>
                            <Text text="{northwind>Country}"/>
                            <Text text="{northwind>City}"/>
                            <Text text="{northwind>PostalCode}"/>
                                
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </f:content>    
    </f:DynamicPage>

</mvc:View>